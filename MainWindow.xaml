<Window x:Class="FuturisticDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        Title="Futuristic Dashboard" Height="1000" Width="1600"
        Background="{StaticResource PrimaryBrush}"
        Foreground="{StaticResource TextBrush}"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <!-- Header -->
        <Grid Height="80" VerticalAlignment="Top" Background="{StaticResource SecondaryBrush}">
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" VerticalAlignment="Center">
                <Grid Margin="30,20">
                    <StackPanel>
                        <TextBlock Text="SYSTEM DASHBOARD" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="TimeDisplay" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button Content="ðŸŒ™ Theme" Click="ToggleTheme_Click" Style="{StaticResource FuturisticButton}" Margin="0,0,10,0"/>
                        <Button Content="â›¶ Fullscreen" Click="ToggleFullscreen_Click" Style="{StaticResource FuturisticButton}" Margin="0,0,10,0"/>
                        <ComboBox x:Name="ColorSchemeSelector" Width="120" Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource TextBrush}" SelectionChanged="ColorScheme_Changed"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Tab Control -->
        <TabControl Margin="0,80,0,0" Background="{StaticResource PrimaryBrush}" Foreground="{StaticResource TextBrush}">
            <TabItem Header="Overview" Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource TextBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel Margin="30">
                        <!-- CPU Chart -->
                        <Border Width="500" Height="280" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="15">
                                <TextBlock Text="CPU Usage Over Time" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <oxy:PlotView x:Name="CpuChart" Height="240" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Memory Chart -->
                        <Border Width="500" Height="280" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="15">
                                <TextBlock Text="Memory Usage Over Time" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <oxy:PlotView x:Name="MemoryChart" Height="240" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Network Chart -->
                        <Border Width="500" Height="280" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="15">
                                <TextBlock Text="Network Speed (Mbps)" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <oxy:PlotView x:Name="NetworkChart" Height="240" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Disk Pie Chart -->
                        <Border Width="500" Height="280" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="15">
                                <TextBlock Text="Disk Usage Breakdown" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <oxy:PlotView x:Name="DiskChart" Height="240" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Quick Stats -->
                        <Border Width="1040" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <Grid Margin="20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="CPU Usage" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="QuickCpu" Text="--%" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Memory Usage" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="QuickMem" Text="--%" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="Disk Usage" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="QuickDisk" Text="--%" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="3">
                                    <TextBlock Text="System Load" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                                    <TextBlock x:Name="QuickLoad" Text="--%" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Processes Tab -->
            <TabItem Header="Processes" Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource TextBrush}">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <TextBlock Text="Top Processes by CPU/Memory" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <Button Content="ðŸ”„ Refresh" Click="RefreshProcesses_Click" Style="{StaticResource FuturisticButton}" Margin="0,10,0,0" Width="100"/>
                    </StackPanel>
                    
                    <DataGrid x:Name="ProcessesGrid" Grid.Row="1" 
                              Background="{StaticResource SecondaryBrush}" 
                              Foreground="{StaticResource TextBrush}"
                              BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
                              AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Process Name" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="PID" Binding="{Binding Id}" Width="80"/>
                            <DataGridTextColumn Header="CPU %" Binding="{Binding CpuUsage, StringFormat='{0:F1}'}" Width="100"/>
                            <DataGridTextColumn Header="Memory (MB)" Binding="{Binding MemoryMB, StringFormat='{0:F1}'}" Width="120"/>
                            <DataGridTemplateColumn Header="Action" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Kill" Click="KillProcess_Click" Style="{StaticResource FuturisticButton}" Padding="8,4" FontSize="11"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Hardware Tab -->
            <TabItem Header="Hardware" Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource TextBrush}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <WrapPanel Margin="30">
                        <!-- System Info -->
                        <Border Width="480" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="20">
                                <TextBlock Text="SYSTEM INFORMATION" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock x:Name="OsInfo" Text="OS: --" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,15,0,5"/>
                                <TextBlock x:Name="CpuInfo" Text="CPU: --" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="RamInfo" Text="RAM: --" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="MotherboardInfo" Text="Motherboard: --" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                            </StackPanel>
                        </Border>

                        <!-- Temperature Info -->
                        <Border Width="480" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="20">
                                <TextBlock Text="TEMPERATURES" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock x:Name="CpuTempInfo" Text="CPU Temp: --Â°C" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,15,0,5"/>
                                <TextBlock x:Name="GpuTempInfo" Text="GPU Temp: --Â°C" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="SsdTempInfo" Text="SSD Temp: --Â°C" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                                <ProgressBar x:Name="TempIndicator" Height="6" Margin="0,10,0,0" 
                                             Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- GPU Info -->
                        <Border Width="480" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="20">
                                <TextBlock Text="GPU INFORMATION" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <TextBlock x:Name="GpuInfo" Text="GPU: --" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,15,0,5"/>
                                <TextBlock x:Name="GpuMemInfo" Text="VRAM: --" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                                <TextBlock x:Name="GpuLoad" Text="Load: --%"  FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                                <ProgressBar x:Name="GpuLoadBar" Height="6" Margin="0,10,0,0" 
                                             Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Disk Details -->
                        <Border Width="1040" Margin="10" 
                                Background="{StaticResource SecondaryBrush}" 
                                BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                                CornerRadius="8">
                            <StackPanel Margin="20">
                                <TextBlock Text="STORAGE INFORMATION" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                <ItemsControl x:Name="DisksPanel" Margin="0,15,0,0"/>
                            </StackPanel>
                        </Border>
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Settings Tab -->
            <TabItem Header="Settings" Background="{StaticResource SecondaryBrush}" Foreground="{StaticResource TextBrush}">
                <StackPanel Margin="30">
                    <TextBlock Text="SETTINGS" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Margin="0,0,0,20"/>
                    
                    <Border Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,15" CornerRadius="4">
                        <StackPanel>
                            <CheckBox x:Name="AlwaysOnTopCheckbox" Content="Always on Top" Foreground="{StaticResource TextBrush}" Checked="AlwaysOnTop_Checked" Unchecked="AlwaysOnTop_Unchecked" Margin="0,0,0,10"/>
                            <CheckBox x:Name="DarkModeCheckbox" Content="Dark Mode (Default)" Foreground="{StaticResource TextBrush}" IsChecked="True" Margin="0,0,0,10"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="15" Margin="0,0,0,15" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="Refresh Interval (seconds)" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                            <Slider x:Name="RefreshIntervalSlider" Minimum="0.5" Maximum="5" Value="1" Width="300" HorizontalAlignment="Left" Margin="0,0,0,10" ValueChanged="RefreshInterval_Changed"/>
                            <TextBlock x:Name="RefreshIntervalDisplay" Text="1.0s" FontSize="11" Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource SecondaryBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Padding="15" CornerRadius="4">
                        <StackPanel>
                            <TextBlock Text="About" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,10"/>
                            <TextBlock Text="Futuristic Dashboard v2.0" FontSize="11" Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="Advanced System Monitoring" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
