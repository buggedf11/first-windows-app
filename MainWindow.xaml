<Window x:Class="FuturisticDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Futuristic Dashboard" Height="900" Width="1400"
        Background="{StaticResource PrimaryBrush}"
        Foreground="{StaticResource TextBrush}"
        WindowStartupLocation="CenterScreen"
        Icon="pack://application:,,,/Assets/icon.ico">
    
    <Grid>
        <!-- Header -->
        <Grid Height="80" VerticalAlignment="Top" Background="{StaticResource SecondaryBrush}">
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1">
                <Grid Padding="30,20">
                    <TextBlock Text="SYSTEM DASHBOARD" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock x:Name="TimeDisplay" HorizontalAlignment="Right" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Margin="0,80,0,0" VerticalScrollBarVisibility="Auto">
            <Grid Padding="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Card 1: System Status -->
                <Border Grid.Row="0" Grid.Column="0" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Padding="20">
                        <TextBlock Text="CPU STATUS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="CpuUsage" Text="--%" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0"/>
                        <ProgressBar x:Name="CpuProgressBar" Height="8" Margin="0,10,0,0" 
                                     Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Card 2: Memory Status -->
                <Border Grid.Row="0" Grid.Column="1" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Padding="20">
                        <TextBlock Text="MEMORY USAGE" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="MemUsage" Text="--%" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0"/>
                        <ProgressBar x:Name="MemProgressBar" Height="8" Margin="0,10,0,0" 
                                     Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Card 3: Network Status -->
                <Border Grid.Row="0" Grid.Column="2" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentAlt}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Padding="20">
                        <TextBlock Text="NETWORK" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentAlt}"/>
                        <TextBlock x:Name="NetworkStatus" Text="CONNECTED" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0"/>
                        <Ellipse Width="16" Height="16" Fill="#00FF00" Margin="0,10,0,0" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>

                <!-- Card 4: Process Count -->
                <Border Grid.Row="1" Grid.Column="0" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Padding="20">
                        <TextBlock Text="ACTIVE PROCESSES" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="ProcessCount" Text="--" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 5: System Uptime -->
                <Border Grid.Row="1" Grid.Column="1" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Padding="20">
                        <TextBlock Text="SYSTEM UPTIME" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="Uptime" Text="-- days" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 6: Disk Space -->
                <Border Grid.Row="1" Grid.Column="2" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Padding="20">
                        <TextBlock Text="DISK USAGE" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock x:Name="DiskUsage" Text="--%" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0"/>
                        <ProgressBar x:Name="DiskProgressBar" Height="8" Margin="0,10,0,0" 
                                     Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Alert Panel -->
                <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentAlt}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Padding="20">
                        <TextBlock Text="SYSTEM ALERTS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentAlt}"/>
                        <TextBlock x:Name="AlertsPanel" Text="â€¢ All systems operational" FontSize="14" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
