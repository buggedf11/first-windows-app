<Window x:Class="FuturisticDashboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Futuristic Dashboard" Height="1000" Width="1600"
        Background="{StaticResource PrimaryBrush}"
        Foreground="{StaticResource TextBrush}"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <!-- Header -->
        <Grid Height="80" VerticalAlignment="Top" Background="{StaticResource SecondaryBrush}">
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1" VerticalAlignment="Center">
                <StackPanel Margin="30,20">
                    <TextBlock Text="SYSTEM DASHBOARD" FontSize="28" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock x:Name="TimeDisplay" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content -->
        <ScrollViewer Margin="0,80,0,0" VerticalScrollBarVisibility="Auto">
            <WrapPanel Margin="30">
                <!-- Card 1: CPU STATUS (Detailed) -->
                <Border Width="480" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Margin="20">
                        <TextBlock Text="CPU STATUS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Overall Usage" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="CpuUsage" Text="--%" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,5,0,0"/>
                            <ProgressBar x:Name="CpuProgressBar" Height="6" Margin="0,8,0,0" 
                                         Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                        </StackPanel>

                        <StackPanel Margin="0,12,0,0">
                            <TextBlock Text="Core Load" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <ProgressBar x:Name="CpuCore1" Height="4" Margin="0,5,0,2" 
                                         Foreground="#00FF00" Background="{StaticResource BorderBrush}"/>
                            <ProgressBar x:Name="CpuCore2" Height="4" Margin="0,0,0,2" 
                                         Foreground="#00FF00" Background="{StaticResource BorderBrush}"/>
                            <ProgressBar x:Name="CpuCore3" Height="4" Margin="0,0,0,2" 
                                         Foreground="#00FF00" Background="{StaticResource BorderBrush}"/>
                            <ProgressBar x:Name="CpuCore4" Height="4" Margin="0,0,0,0" 
                                         Foreground="#00FF00" Background="{StaticResource BorderBrush}"/>
                        </StackPanel>

                        <TextBlock x:Name="CpuDetail" Text="Processes: --" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 2: MEMORY STATUS (Detailed) -->
                <Border Width="480" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Margin="20">
                        <TextBlock Text="MEMORY USAGE" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Usage Percentage" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="MemUsage" Text="--%" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,5,0,0"/>
                            <ProgressBar x:Name="MemProgressBar" Height="6" Margin="0,8,0,0" 
                                         Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                        </StackPanel>

                        <TextBlock x:Name="MemDetail" Text="-- GB / -- GB (Installed)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                        <TextBlock x:Name="MemAvailable" Text="Available: -- GB" FontSize="11" Foreground="#00FF00" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 3: DISK USAGE (Detailed) -->
                <Border Width="480" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Margin="20">
                        <TextBlock Text="DISK USAGE (C:)" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Drive Capacity" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="DiskUsage" Text="--%" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,5,0,0"/>
                            <ProgressBar x:Name="DiskProgressBar" Height="6" Margin="0,8,0,0" 
                                         Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                        </StackPanel>

                        <TextBlock x:Name="DiskDetail" Text="-- GB / -- GB Used" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                        <TextBlock x:Name="DiskFree" Text="Free: -- GB" FontSize="11" Foreground="#00FF00" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 4: NETWORK STATUS (Detailed) -->
                <Border Width="480" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentAltBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Margin="20">
                        <TextBlock Text="NETWORK STATUS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentAltBrush}"/>
                        
                        <StackPanel Margin="0,15,0,0">
                            <TextBlock Text="Connectivity" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Ellipse x:Name="NetworkIndicator" Width="20" Height="20" Fill="#00FF00"/>
                                <TextBlock x:Name="NetworkStatus" Text="CONNECTED" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="15,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock x:Name="NetworkDetail" Text="Interfaces: --" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,10,0,0"/>
                        <TextBlock x:Name="NetworkIP" Text="IP: --" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Card 5: SYSTEM INFO (Detailed) -->
                <Border Width="480" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Margin="20">
                        <TextBlock Text="SYSTEM INFORMATION" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        
                        <TextBlock x:Name="ProcessCount" Text="Active Processes: --" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,15,0,5"/>
                        <TextBlock x:Name="Uptime" Text="Uptime: -- days, -- hours" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                        <TextBlock x:Name="SystemLoad" Text="System Load: --%" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                        <ProgressBar x:Name="SystemLoadBar" Height="6" Margin="0,8,0,0" 
                                     Foreground="{StaticResource AccentBrush}" Background="{StaticResource BorderBrush}"/>
                    </StackPanel>
                </Border>

                <!-- Card 6: PERFORMANCE METRICS -->
                <Border Width="480" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Margin="20">
                        <TextBlock Text="PERFORMANCE METRICS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        
                        <Grid Margin="0,15,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="GPU Utilization" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="GpuUsage" Text="-- %" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Temp (CPU)" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="CpuTemp" Text="-- °C" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,4,0,0"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock x:Name="PerformanceDetail" Text="Status: Optimal" FontSize="11" Foreground="#00FF00" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Alert Panel (Full Width) -->
                <Border Width="1000" Margin="10" 
                        Background="{StaticResource SecondaryBrush}" 
                        BorderBrush="{StaticResource AccentAltBrush}" BorderThickness="2"
                        CornerRadius="8">
                    <StackPanel Margin="20">
                        <TextBlock Text="SYSTEM ALERTS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource AccentAltBrush}"/>
                        <TextBlock x:Name="AlertsPanel" Text="• All systems operational" FontSize="12" Foreground="{StaticResource TextBrush}" Margin="0,10,0,0" TextWrapping="Wrap" LineHeight="18"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Window>
